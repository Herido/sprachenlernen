          {{ form_widget(form.password, {'attr': {'class':'form-control'}}) }}
          {{ form_errors(form.password) }}
        </div>

        <div class="form-check mb-3">
          {{ form_widget(form.gdpr, {'attr': {'class': 'form-check-input'}}) }}
          {{ form_label(form.gdpr, null, {'label_attr': {'class':'form-check-label'}}) }}
          {{ form_errors(form.gdpr) }}
        </div>

        <button class="btn btn-danger">
          Account endg√ºltig l√∂schen
        </button>
        <a href="{{ path('profile_index') }}" class="btn btn-light">Abbrechen</a>

      {{ form_end(form) }}
    </div>
  </div>

</div>
{% endblock %}
{% endblock %}
