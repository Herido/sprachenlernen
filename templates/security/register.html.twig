<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}FixLearn | Register{% endblock %}</title>
    {% block importmap %}{{ importmap('app') }}{% endblock %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="hold-transition login-page">
<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="" class="h1"><b>Fix</b>Learn</a>
        </div>

        <div class="card-body">
            <p class="login-box-msg">Register a new membership</p>

            {{ form_start(registrationForm, { attr: { class: 'user' } }) }}

            <div class="input-group mb-3">
                {{ form_widget(registrationForm.email, { attr: { class: 'form-control ', placeholder: 'Email' } }) }}
                <div class="input-group-append">
                    <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                </div>
            </div>

           
            <div class="input-group mb-3">
                {{ form_widget(registrationForm.plainPassword.first, { attr: { class: 'form-control', placeholder: 'Password' } }) }}
                <div class="input-group-append">
                    <div class="input-group-text"><span class="fas fa-lock"></span></div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(registrationForm.plainPassword.second, { attr: { class: 'form-control', placeholder: 'Repeat Password' } }) }}
                <div class="input-group-append">
                    <div class="input-group-text"><span class="fas fa-lock"></span></div>
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                            {{ form_widget(registrationForm.agreeTerms) }}
                        <label for="registration_form_agreeTerms">I agree to the <a href>terms</a></label>
                    </div>
                </div>

                <div class="col-4">
                    <button class="btn btn-primary btn-block">Register</button>
                </div>
            </div>

            {{ form_end(registrationForm) }}

            <p class="mt-3 mb-1">
                <a href="{{ path('app_login') }}">Already have an account?</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>
